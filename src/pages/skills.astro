---
import SiteLayout from '../layouts/SiteLayout.astro'
---

<SiteLayout title="Skills">
	<h1 class="page--title">Technical <span class="colored">Skills</span></h1>
        
	<section class="skills">
		<div class="white-space-lg"></div>
		<h2><span class="colored">➔</span> Web skills 💻📱</h2>
